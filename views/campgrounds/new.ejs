<% layout("layouts/boilerplate")%>

    
    <div class="row">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Enter title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Enter location</label>
                    <input  class="form-control" type="text" id="location" name="campground[location]" required>
                </div>
               
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Enter Price</label>
                    <input class="form-control" type="Number" id="price" name="campground[price]" required>
                    <div class="valid-feedback">looks good</div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Enter Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]" required></textarea>
                </div>
                
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>
               
        
            </form>
            <a href="/campgrounds">Back to Campgrounds</a>
            

        </div>


    </div>




    